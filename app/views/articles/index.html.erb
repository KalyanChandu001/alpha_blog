<h1>Listing Articles</h1>
<p><%= link_to "Create New Article", new_article_path %></p>
<table>
	<tr>
		<th>Title</th>
		<th>Heading</th>
	</tr>


<% @articles.each do |i|%>
<tr>
	<td><%= i.title %> </td>
	<td><%= i.description %></td>
	<td><%= link_to "Show", article_path(i) %></td>
	<td><%= link_to "Edit", edit_article_path(i) %></td>
	<td><%= link_to "Delete", article_path(i), method: :delete, data: {confirm: "Are you sure?"} %></td>
</tr>
<% end %>
</table>